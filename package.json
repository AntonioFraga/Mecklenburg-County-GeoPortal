{
  "name": "geoportal3",
  "version": "3.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel builddev:* && npm-run-all --parallel watch:*",
    "watch:js": "watchify app/js/app.js -o public/js/app.js",
    "watch:css": "onchange \"app/css/**/*.css\" -- npm run builddev:css",
    "watch:html": "onchange \"app/index.html\" -- npm run builddev:html",
    "watch:serve": "browser-sync --server \"public\" start --files \"public/**/*.html\" \"public/**/*.css\" \"public/js/**/*.js\" ",
    "builddev:css": "postcss -m -o public/css/main.css app/css/main.css",
    "builddev:html": "ncp app/index.html public/index.html",
    "build:copy": "ncp app/index.html public/index.html && ncp app/style public/style && ncp app/font public/font && ncp app/manifest.json public/manifest.json",
    "build:imagemin": "mkdirp public/img && imagemin app/img/* --out-dir=public/img",
    "build:js": "mkdirp public/js && cross-env NODE_ENV=production browserify -g envify -g uglifyify --debug app/js/app.js | exorcist public/js/app.js.map > public/js/app.js",
    "build:css": "mkdirp public/css && postcss -m -e production -o public/css/main.css app/css/main.css",
    "serviceworker:precache": "sw-precache --root=public --static-file-globs='public/**/*.{js,json,html,css,png,jpg,gif,svg,eot,ttf,woff,woff2}'",
    "assetversion": "node build/cachebuster.js",
    "build": "del public && npm-run-all --parallel build:* && npm run assetversion && npm run serviceworker:precache"
  },
  "author": "Tobin Bradley",
  "license": "MIT",
  "dependencies": {
    "chartist": "^0.11.0",
    "format-number": "^2.0.1",
    "lodash.debounce": "^4.0.8",
    "mapbox-gl": "^0.37.0",
    "material-design-lite": "^1.3.0",
    "promise-polyfill": "^6.0.2",
    "vue": "^2.3.2",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.8",
    "browserify": "^14.3.0",
    "cross-env": "^3.1.3",
    "cssnano": "^3.10.0",
    "del-cli": "^1.0.0",
    "envify": "^3.4.1",
    "exorcist": "^0.4.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-version-assets": "^1.2.0",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^3.1.1",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^9.1.0",
    "sw-precache": "^5.1.1",
    "uglifyify": "^3.0.4",
    "vue-template-compiler": "^2.3.2",
    "vueify": "^9.4.1",
    "watchify": "^3.9.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      }
    },
    "plugins": [],
    "rules": {
      "indent": [
        2,
        4
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "quotes": [
        0,
        "single"
      ],
      "semi": [
        2,
        "always"
      ]
    }
  }
}
